@model Infrastructure.Models.DanhMuc.DanhMucLoaiHang

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>

<h4>DanhMucLoaiHang</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create_Update" asp-controller="DanhMucLoaiHang" method="post">
                <input hidden asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
